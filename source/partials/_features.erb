<section id="accompagnement" class="bg-[#67B4A6] py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <% if data.features.title.present? %>
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-3xl font-bold tracking-tight text-teal-50 sm:text-4xl">
          <%= data.features.title %>
        </h2>
        <p class="mt-6 text-lg leading-8 text-white">
          <%= data.features.description %>
        </p>
      </div>
    <% end %>
    <div class="mx-auto <% "mt-16 sm:mt-20 lg:mt-24" if data.features.title.present? %> max-w-2xl lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-16 lg:max-w-none lg:grid-cols-3">
        <% data.features.items.each do |feature| %>
          <div class="flex flex-col">
            <dt class="text-2xl uppercase font-semibold leading-7 text-teal-50">
              <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-teal-600">
                <i class="text-white fa-solid fa-<%= feature.icon %>"></i>
              </div>
              <%= feature.title %>
            </dt>
            <dd class="<%= feature.title.present? ? 'text-base' : 'text-xl' %> mt-1 flex flex-auto flex-col leading-7 text-white">
              <div class="flex-auto">
                <p><%= feature.description %></p>
                <ul class="mt-3">
                  <% feature.tags.each do |tag| %>
                    <% if tag.present? %>
                      <li class="flex gap-x-3 items-baseline">
                        <i class="fa-solid fa-caret-right text-gray-200"></i>
                        <%= tag %>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
              <p class="mt-6">
                <% if feature.link.present? %>
                  <a href="<%= feature.link %>" class="text-sm font-bold leading-6 text-white">
                    <%= feature.link_caption.presence || "En savoir plus" %>
                    <span aria-hidden="true">â†’</span>
                  </a>
                <% end %>
              </p>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</section>
