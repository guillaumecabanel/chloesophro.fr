<div class="w-96 rounded-lg bg-slate-50 p-8">
  <header class="flex items-center space-x-8">
    <div class="rounded-full bg-white shadow w-16 h-16 flex items-center justify-center">
      <i class="<%= feature.text_color %> fa-duotone fa-2x fa-<%= feature.icon %>"></i>
    </div>

    <div>
      <p class="text-xs font-semibold uppercase tracking-widest <%= feature.text_color %>">
        <%= feature.caption %>
      </p>
      <h2 class="mt-2 text-lg font-bold text-slate-900">
        <%= feature.title %>
      </h2>
    </div>
  </header>

  <p class="mt-8 leading-relaxed text-slate-900">
    <%= feature.description %>
  </p>
</div>
