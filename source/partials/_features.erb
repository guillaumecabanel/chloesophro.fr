<section id="accompagnement" class="bg-teal-900 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-teal-50 sm:text-4xl">
        <%= data.features.title %>
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-300">
        <%= data.features.description %>
      </p>
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        <% data.features.items.each do |feature| %>
          <div class="flex flex-col">
            <dt class="text-2xl uppercase font-semibold leading-7 text-teal-50">
              <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-teal-600">
                <i class="text-white fa-solid fa-<%= feature.icon %>"></i>
              </div>
              <%= feature.title %>
            </dt>
            <dd class="mt-1 flex flex-auto flex-col text-base leading-7 text-gray-300">
              <div class="flex-auto">
                <p><%= feature.description %></p>
                <ul class="mt-3">
                  <% feature.tags.each do |tag| %>
                    <li class="flex gap-x-3 items-baseline">
                      <i class="fa-solid fa-caret-right text-gray-200"></i>
                      <%= tag %>
                    </li>
                  <% end %>
                </ul>
              </div>
              <p class="mt-6">
                <a href="<%= feature.link %>?utm_source=chloesophro" class="text-sm font-semibold leading-6 text-teal-300">
                  En savoir plus
                  <span aria-hidden="true">â†’</span>
                </a>
              </p>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</section>
